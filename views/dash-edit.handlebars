<div class="card" id="editBlogCard">
    <h5 class="card-header">Edit Post</h5>
    <div class="card-body">
        <form id="editBlogForm">
            <div class="form-group">
                <label for="editTitle">Title</label>
                <input class="form-control" type="text" name="title" id='editTitle' value="{{title}}" />
            </div>
            <div class="form-group">
                <label for="editContent">Content</label>
                <input class="form-control" type="textarea" name="content" id='editContent' value="{{content}}" />
            </div>
            <button class="btn btn-secondary" type="submit" id="editBlogBtn" data-id="{{id}}">Update Post</button>
            <button class="btn btn-secondary" id="delBlogBtn" data-id="{{id}}">Delete</button>
        </form>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script src="/js/editScript.js"></script>