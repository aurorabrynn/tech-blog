<div class="card" id="loginCard">
    <h5 class="card-header">Login</h5>
    <div class="card-body">
        <form id="loginForm">
            <div class="form-group">
                <label for="loginUsername">Username</label>
                <input class="form-control" type="text" name="username" id='loginUsername' />
            </div>
            <div class="form-group">
                <label for="loginPassword">Password</label>
                <input class="form-control" type="password" name="password" id='loginPassword' />
            </div>
            <a href="#" class="btn btn-secondary" id="loginBtn">Login</a>
            <a href="#" id="signupBtn">Sign up instead</a>
        </form>
    </div>
</div>