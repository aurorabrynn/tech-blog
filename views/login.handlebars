<div class="card" id="loginCard">
    <h5 class="card-header">Login</h5>
    <div class="card-body">
        <form id="loginForm">
            <div class="form-group">
                <label for="loginUsername">Username</label>
                <input class="form-control" type="text" name="username" id='loginUsername' />
            </div>
            <div class="form-group">
                <label for="loginPassword">Password</label>
                <input class="form-control" type="password" name="password" id='loginPassword' />
            </div>
            <button class="btn btn-secondary" type="submit" id="loginBtn">Login</button>
            <a href="/signup" id="toSignUpBtn">Sign up instead</a>
        </form>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script src="/js/loginScript.js"></script>