{{#if logged_in}}
{{#each blogs as |blog| }}
<div class="card" id="blogCard">
    <div class="card-header container-fluid" id="blogHeader">
        <div class="row" id="blogRow">
            <h5 class="col-10"><a href="/blogs/{{id}}">{{title}}</a></h5>
            <p class="col-2">Posted by {{user.username}} on {{format_date date_created}}</p>
        </div>
    </div>
    <div class="card-body">
        <p class="card-text">{{content}}</p>
    </div>
</div>
{{/each}}

{{else}}

